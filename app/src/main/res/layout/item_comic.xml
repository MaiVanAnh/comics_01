<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5">

    <ImageView
        android:id="@+id/imgThumbComicDetail"
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_230"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/comic_name"
        android:textAlignment="center"
        android:textColor="@color/colorGrey900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgThumbComicDetail"
        app:layout_constraintStart_toStartOf="@+id/imgThumbComicDetail"
        app:layout_constraintTop_toBottomOf="@+id/imgThumbComicDetail"/>

</android.support.constraint.ConstraintLayout>
